{{#each erros}}
    <div class="alert alert-danger">{{ texto }}</div>
{{else}}
{{/each}}

<h3>Nova Postagem</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Titulo: </label>
            <input type="text" id="titulo" name="titulo" placeholder="Titulo da Postagem" class="form-control">
            <br>
            <label for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" placeholder="Slug da Postagem" class="form-control">
            <br>
            <label for="descricao">Descrição: </label>
            <input type="text" id="descricao" name="descricao" placeholder="Descrição da Postagem" class="form-control">
            <br>
            <label for="conteudo">Conteúdo: </label>
            <textarea type="text" id="conteudo" name="conteudo" placeholder="Conteúdo da Postagem" class="form-control"></textarea>
            <br>
            <label for="categoria">Categoria: </label>
            <select id="categoria" name="categoria" class="form-control">
                {{#each categorias}}
                    <option value="{{ _id }}">{{ nome }}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br>
            <div class="text-center">
                <button type="submit" class="btn btn-success">Criar Postagem</button>
            </div>
        </form>
    </div>
</div>