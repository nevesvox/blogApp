<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/">Blog do Node</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#conteudoNavbarSuportado" aria-controls="conteudoNavbarSuportado" aria-expanded="false" aria-label="Alterna navegação">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="conteudoNavbarSuportado">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/categorias">Categorias</a>
      </li>
      {{#if user}}
        <div id="admin"></div>
        <li class="nav-item active">
          <a class="nav-link" href="/usuarios/logout">Sair</a>
        </li>
      {{else}}
        <li class="nav-item active">
          <a class="nav-link" href="/usuarios/login">Login</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/usuarios/registro">Cadastro</a>
        </li>
      {{/if}}
    </ul>
  </div>
</nav>

<script>
  // Verifica se possui o usuario logado
  if ('{{{user}}}') {
    // Recupera os dados do User
    const user = JSON.parse('{{{user}}}')
    // Verifica se o usuário esta logado e se é um ADM
    if (typeof user.admin !== undefined && user.admin == 1) {
      // Cria a Div que insere as opções
      const div = document.createElement('div');
      div.innerHTML = `
      <li class="nav-item active dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Admin
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="/admin/categorias">Manutenção de Categorias</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="/admin/postagens">Manutenção de Postagens</a>
        </div>
      </li>`
      document.getElementById('admin').appendChild(div);
    }
  }
  
</script>